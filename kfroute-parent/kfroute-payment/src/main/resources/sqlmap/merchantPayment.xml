<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="merchantPayment">
	<typeAlias alias="MerchantPayment" type="cn.seocoo.platform.payment.MerchantPayment" />

	<select id="queryAll" resultClass="MerchantPayment">
		select * from tb_seocoo_merchant_payment
	</select>

	<select id="query" parameterClass="MerchantPayment" resultClass="MerchantPayment">
		select * from tb_seocoo_merchant_payment
		<dynamic prepend="where">
			<isNotEmpty prepend=" and " property="id">
				id = #id#
	      </isNotEmpty>
		 <isNotEmpty prepend=" and " property="merchantCode">
				merchantCode = #merchantCode#
	      </isNotEmpty>
	      	<isNotEmpty prepend=" and " property="paymentCode">
				paymentCode = #paymentCode#
	      </isNotEmpty>
		</dynamic>
	</select>
	
	<select id="queryList" resultClass="MerchantPayment" parameterClass="MerchantPayment" >
		select * from tb_seocoo_merchant_payment where merchantCode=#merchantCode#
	</select>
	
	
	<update id="update" parameterClass="MerchantPayment">
		update tb_seocoo_merchant_payment
		<dynamic prepend="set">
			<isNotEmpty prepend=" , " property="merchantCode">
				merchantCode = #merchantCode#
		</isNotEmpty>
			<isNotEmpty prepend=" , " property="merchantName">
				merchantName = #merchantName#
		</isNotEmpty>
			<isNotEmpty prepend=" , " property="paymentCode">
				paymentCode = #paymentCode#
	      </isNotEmpty>
	      	<isNotEmpty prepend=" , " property="paymentName">
				paymentName = #paymentName#
	      </isNotEmpty>
	      	<isNotEmpty prepend=" , " property="paymentUrl">
				paymentUrl = #paymentUrl#
	      </isNotEmpty>
	      	<isNotEmpty prepend=" , " property="paymentDesc">
				paymentDesc = #paymentDesc#
	      </isNotEmpty>
	      	<isNotEmpty prepend=" , " property="paymentAccount">
				paymentAccount = #paymentAccount#
	      </isNotEmpty>
		</dynamic>
		where id = #id#
	</update>
	
	<insert id="insert" parameterClass="MerchantPayment">
		insert into tb_seocoo_merchant_payment(merchantCode,merchantName,paymentCode,paymentName,paymentUrl,paymentDesc,paymentAccount)
			 values(#merchantCode#,#merchantName#,#paymentCode#,#paymentName#,#paymentUrl#,#paymentDesc#,#paymentAccount#)
	</insert>
	
	<delete id="delete" parameterClass="MerchantPayment">
		delete from tb_seocoo_merchant_payment
		<dynamic prepend="where">
		  <isNotEmpty prepend=" and " property="id">
				id = #id#
	      </isNotEmpty>
		</dynamic>
	</delete>
	

</sqlMap>